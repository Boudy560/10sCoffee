<Window x:Class="tenscoffe.MangementDrinks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tenscoffe"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#AAAC59"
        Title="MangementDrinks" Height="700" Width="900">
    <Grid>
        <Label Content="ادارة مخزون المشروبات" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="218" FontFamily="Arial" FontWeight="Bold" FontSize="25"/>
        <Label Content="كود المشروب" HorizontalAlignment="Left" Margin="670,70,0,0" VerticalAlignment="Top" Width="108" FontFamily="Arial" FontSize="20"/>
        <Label Content="اسم المشروب" HorizontalAlignment="Left" Margin="510,70,0,0" VerticalAlignment="Top" Width="98" FontFamily="Arial" FontSize="20"/>
        <Label Content="عدد المشروبات" HorizontalAlignment="Left" Margin="330,70,0,0" VerticalAlignment="Top" Width="106" FontFamily="Arial" FontSize="20"/>
        <Label Content="سعر المشروب" HorizontalAlignment="Left" Margin="159,70,0,0" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="678,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Height="23" FontFamily="Arial" FontSize="15" TextAlignment="Right"/>
        <TextBox HorizontalAlignment="Left" Margin="168,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Height="23" FontFamily="Arial" FontSize="15" TextAlignment="Right"/>
        <TextBox HorizontalAlignment="Left" Margin="337,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Height="23" FontFamily="Arial" FontSize="15" TextAlignment="Right"/>
        <TextBox HorizontalAlignment="Left" Margin="513,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Height="23" FontFamily="Arial" FontSize="15" TextAlignment="Right"/>
        <Button Content="تعديل" HorizontalAlignment="Left" Margin="574,226,0,0" VerticalAlignment="Top" Width="128" Click="update" FontFamily="Arial" FontSize="15" FontWeight="Bold" Foreground="White" Background="Black"/>
        <Button Content="حذف" HorizontalAlignment="Left" Margin="196,226,0,0" VerticalAlignment="Top" Width="128"   Click="delete" FontFamily="Arial" FontSize="15" FontWeight="Bold" Background="Black" Foreground="White"/>
        <Button Content="اضافه" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Width="128" Click="add" FontFamily="Arial" FontSize="15" FontWeight="Bold" Foreground="White" Background="Black"/>
        <DataGrid HorizontalAlignment="Center" Height="346" Margin="0,328,0,0" VerticalAlignment="Top" Width="880" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
