<Window x:Class="tenscoffe.Bens_Bill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tenscoffe"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Bens_Bill" Height="700" Width="1000">
    <Grid Background="#FFAAAC59">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="591,10,10,353" SelectionChanged="DataGrid_Selection"/>
        <Label Content="الكمية" HorizontalAlignment="Left" Margin="488,543,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial" FontSize="20" Height="32" Width="52"/>
        <Button Content="تأكيد الشراء" HorizontalAlignment="Left" Margin="363,601,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="buy" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="115" Height="34"/>
        <Button Content="سادة" HorizontalAlignment="Left" Margin="327,357,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="coffee_sada" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="114" Height="34"/>
        <Button Content="محوج" HorizontalAlignment="Left" Margin="192,359,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="coffee_roasted" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="115" Height="34"/>
        <Label Content="نوع البن" HorizontalAlignment="Left" Margin="480,359,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial" FontSize="20" Height="32" Width="68"/>
        <Label Content="درجة البن" HorizontalAlignment="Left" Margin="474,452,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial" FontSize="20" Height="32" Width="80"/>
        <Button Content="فاتح" HorizontalAlignment="Left" Margin="327,452,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="light_btn" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="114" Height="34"/>
        <Button Content="وسط" HorizontalAlignment="Left" Margin="192,453,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="meduim_btn" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="115" Height="34"/>
        <Button Content="غامق" HorizontalAlignment="Left" Margin="56,453,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="dark_btn" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="115" Height="34"/>
        <TextBox HorizontalAlignment="Left" Margin="192,543,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="35" TextAlignment="Center" FontSize="20" FontFamily="Arial" FontWeight="Bold" UndoLimit="50"/>
        <Button Content="حذف عنصر واحد" HorizontalAlignment="Left" Margin="816,357,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="delete_one_item_from_database" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="133" Height="34"/>
        <Button Content="حذف بيانات الجدول" HorizontalAlignment="Left" Margin="662,357,0,0" VerticalAlignment="Top" Background="Black" BorderBrush="#FFAAAC59" Foreground="White" Padding="5,5,5,5" Click="delete_all_data_from_data_grid" FontWeight="Bold" FontSize="20" FontFamily="Arial" Width="145" Height="34"/>
    </Grid>
</Window>
